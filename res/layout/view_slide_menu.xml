<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#D7D7E8">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/slide_menu_consult_evt"
        android:background="@drawable/list_selector"
        android:text="Consulter les événements"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/slide_menu_create_evt"
        android:background="@drawable/list_selector"
        android:text="Création d'un événement"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/slide_menu_deco"
        android:background="@drawable/list_selector"
        android:text="Déconnexion"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/slide_menu_quit"
        android:background="@drawable/list_selector"
        android:text="Quitter"/>

</LinearLayout>